{{name}}_build:
  docker:
  - image: vroom/mlp:3.0.2
  steps:
    - {{name}}
    - setup_remote_docker:
        version: 18.09.3
    - run:
        command: |-
          build -a vroom-web/apps/{{name}}/docker
{{name}}_deploy:
  docker:
  - image: vroom/mlp:3.0.2
  parameters:
    env:
      type: string
  steps:
    - {{name}}
    - setup_remote_docker:
        version: 18.09.3
    - run:
        command: |-
          deploy -a vroom-web/apps/{{name}}/docker -n << parameters.env >>