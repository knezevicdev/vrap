{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "es2018",
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "incremental": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./next-env.d.ts",
    "./types/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./svg.d.ts",
    "./src/**/*.json",
    "./.eslintrc.js",
    "./jest.config.js",
    "./jest-setup.js",
    "./next.config.js",
    "./tools/**/*.js",
  ]
}
