{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es5",
    "esModuleInterop": true
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": [
    "./src/setupTests.ts",
    "./src/**/**.test.tsx",
    "./src/**/**.test.ts",
    "./src/**/**.stories.ts",
    "./src/**/**.stories.tsx",
    "./src/**/examples/**"
  ]
}
